   <patchobj type="patch/object" uuid="83e2f688-3873-45de-b879-8ab79efe3999" name="beatslicer" x="462" y="378">
      <params/>
      <attribs>
         <objref attributeName="slicesbufferl" obj="slicesbufl"/>
         <objref attributeName="slicesbufferr" obj="slicesbufr"/>
