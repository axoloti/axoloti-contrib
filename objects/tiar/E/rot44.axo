m = M[0]; outlet_out0 = ___SMMLA(inlet_in0, m[0], ___SMMLA(inlet_in1, m[1], ___SMMLA(inlet_in2, m[2], ___SMMUL(inlet_in3, m[3]))))<<5; 
m = M[1]; outlet_out1 = ___SMMLA(inlet_in0, m[0], ___SMMLA(inlet_in1, m[1], ___SMMLA(inlet_in2, m[2], ___SMMUL(inlet_in3, m[3]))))<<5; 
m = M[2]; outlet_out2 = ___SMMLA(inlet_in0, m[0], ___SMMLA(inlet_in1, m[1], ___SMMLA(inlet_in2, m[2], ___SMMUL(inlet_in3, m[3]))))<<5; 
m = M[3]; outlet_out3 = ___SMMLA(inlet_in0, m[0], ___SMMLA(inlet_in1, m[1], ___SMMLA(inlet_in2, m[2], ___SMMUL(inlet_in3, m[3]))))<<5; 
]]></code.srate>
