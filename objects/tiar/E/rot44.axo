   <obj.normal id="rot44" uuid="44c838a7-a7de-4c03-ad05-137f17497344">
      <sDescription>4x4 fixed rotation matrix</sDescription>
      <author>Smashed Transistors</author>
      <license>LGPL</license>
      <helpPatch>rot.axh</helpPatch>
      <inlets>
         <frac32buffer name="in0"/>
         <frac32buffer name="in1"/>
         <frac32buffer name="in2"/>
         <frac32buffer name="in3"/>
      </inlets>
      <outlets>
         <frac32buffer name="out0"/>
         <frac32buffer name="out1"/>
         <frac32buffer name="out2"/>
         <frac32buffer name="out3"/>
      </outlets>
      <displays/>
      <params/>
      <attribs/>
      <code.declaration><![CDATA[
//local
static const int N = 4;
int32_t M[N][N];
int32_t tmp[N][N];
int32_t R[N][N];

int32_t sin2t_q27(uint32_t p){
  int32_t a = (p & ((1<<20)-1)) << 8; //q28
  uint32_t i = p >> 20;
  return ___SMMLA(a, sine2t[i+1] - sine2t[i], sine2t[i] >> 4);
}
int32_t cos2t_q27(uint32_t p){
  return sin2t_q27(p + (1UL << 30));
}
//M q27;
void setR(int axis1, int axis2, float angle){
  for(int j = 0; j < N; j++){
    for(int i = 0; i < N; i++){
      R[j][i] = 0;
    }
  }
  uint32_t ia = (uint32_t)(angle * 11930464.71f);// (2^32)/360
  int32_t c = cos2t_q27(a);
  int32_t s = sin2t_q27(a);
  R[axis1][axis1]=c; R[axis1][axis2]=-s;
  R[axis2][axis1]=s; R[axis2][axis2]= c;
}

void MxR(void){
  for(int j = 0; j < N; j++){
    for(int i = 0; i < N; i++){ 
      tmp[j][i] = M[j][i];
    }
  }
  for(int j = 0; j < N; j++){
    for(int i = 0; i < N; i++){
      M[j][i] = 0;
      for(int k = 0; k < N; k++){
         M[j][i] += ___SMMUL(tmp[j][k], R[k][i])<<5;
      }
    }
  }
} 
void rot(int axis1, int axis2, float angle){
  setR(axis1, axis2, angle);
  MxR();
}

//move to init
for(int j = 0; j < N; j++){
  for(int i = 0; i < N; i++){
    M[j][i] = (i == j) ? 1<<27 : 0;
  }
}
rot(0, 1, 45.0f);
rot(2, 3, 45.0f);



]]></code.declaration>
      <code.krate><![CDATA[uint32_t a = (param_theta & 0x07FFFFFF) << 5;
